@model Demo.BLL.Models.DepartmentVM

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h2>Delete Department</h2>
<br />
<a asp-action="Index" asp-controller="Department"  class="btn btn-success">Back To Department</a>
<br />
<br />


<form asp-action="Delete" asp-controller="Department"  class="form-group">

    <input type="hidden" asp-for="Id" />


    <label>Department Name</label>
    <input type="text" asp-for="DepartmentName" disabled class="form-control" />
    <br />
    <label>Department Code</label>
    <input type="text" asp-for="DepartmentCode" disabled class="form-control" />

    <br />
    <center>
        <input type="submit" value="Delete" class="btn btn-danger" />

        <a asp-route-id="@Model.Id" asp-action="Edit" asp-controller="Department"  class="btn btn-primary">Edit</a>

    </center>
</form>

