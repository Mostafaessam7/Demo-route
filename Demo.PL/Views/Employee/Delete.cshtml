@model Demo.BLL.Models.EmployeeVM

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h2>Delete Employee</h2>
<br />
<a asp-action="Index" asp-controller="Employee" class="btn btn-success">Back To Employee</a>

<br />

<form asp-action="Delete" asp-controller="Employee" class="form-group">

    <input type="hidden" asp-for="Id" class="form-control" />
    <input type="hidden" asp-for="CvUrl" class="form-control" />
    <input type="hidden" asp-for="PhotoUrl" class="form-control" />

    <br />
    <label>Employee Name</label>
    <input type="text" disabled asp-for="Name" class="form-control" />
    <br />
    <label>Employee Salary</label>
    <input type="number" disabled asp-for="Salary" class="form-control" />
    <br />

    <label>Employee Email</label>
    <input type="Email" disabled asp-for="Email" class="form-control" />
    <br />

    <label>Employee Address</label>
    <input type="text" disabled asp-for="Address" class="form-control" />

    <br />

    <label>Employee HireDate</label>
    <input type="date" disabled asp-for="HireDate" class="form-control" />

    <br />

    <label>Employee Notes</label>
    <textarea asp-for="Notes" disabled class="form-control"></textarea>



    <label>Is Active</label>
    <div class="demo-checkbox">
        <input disabled type="checkbox" asp-for="IsActive">
        <label asp-for="IsActive">IsActive</label>

    </div>
    <br />
    <br />
    <br />
    <br />


    <label>Department</label>
    <select asp-for="DepartmentId" disabled asp-items="(SelectList)ViewBag.DepartmentList">
        <option>
            Choose Department
        </option>
    </select>
    <br />
    <br />
    <br />
    <br />

    <center>
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-route-id="@Model.Id" asp-action="Edit" asp-controller="Employee" class="btn btn-primary">Edit</a>
    </center>
</form>


